# =============================================================================
# Telegram Bot Configuration
# =============================================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Comma-separated list of allowed Telegram user IDs (for authentication)
# Get your user ID by messaging @userinfobot on Telegram
# Leave empty to allow all users (NOT RECOMMENDED for production)
TELEGRAM_ALLOWED_USERS=123456789,987654321

# =============================================================================
# 24/7 Automatic Signal Notifications
# =============================================================================
# Enable automatic signal checking and notifications
ENABLE_AUTO_SIGNALS=true

# How often to check for signals (in seconds)
# Recommended: 1800 (30 min), 3600 (1 hour), 7200 (2 hours)
AUTO_SIGNAL_INTERVAL=1800

# Enable hourly market status updates
HOURLY_STATUS_ENABLED=true

# How often to send market status (in seconds)
# Recommended: 3600 (1 hour), 7200 (2 hours)
HOURLY_STATUS_INTERVAL=3600

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_PATH=./data/strategies.db

# =============================================================================
# Trading Parameters
# =============================================================================
# Minimum confidence score to generate a signal (0-100)
MIN_CONFIDENCE_THRESHOLD=80.0

# Minimum ensemble agreement threshold (0-1)
MIN_AGREEMENT_THRESHOLD=0.80

# Maximum acceptable drawdown (0-1)
MAX_DRAWDOWN_THRESHOLD=0.20

# Default trading pairs (comma-separated)
DEFAULT_PAIRS=EUR/USD,GBP/USD,XAU/USD

# =============================================================================
# Learning Loop Configuration
# =============================================================================
# How often the learning loop updates (in seconds)
LEARNING_LOOP_INTERVAL=3600

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=./logs/trading_bot.log

# =============================================================================
# Cache Configuration
# =============================================================================
CACHE_DIR=./data/cache

# =============================================================================
# Data Sources (Optional - for future use)
# =============================================================================
ALPHA_VANTAGE_API_KEY=optional
# OANDA API Configuration (for real-time forex data)
# Get your credentials from: https://fxtrade.oanda.com/
# See OANDA_SETUP.md for detailed instructions
OANDA_API_KEY=your_oanda_api_token_here
OANDA_ACCOUNT_ID=your_account_id_here
OANDA_ENVIRONMENT=practice
